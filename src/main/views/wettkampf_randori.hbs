            <label>{{wertung.wettkaempfer2.id}}</label>
            <label>{{wertung.wettkaempfer2.verein.name}}</label>
          </div>
          <span class="row"><label>Fairness</label><input type="number" name="fairness2" required/><br/></span>
          <span class="row"><label>Kampfgeist</label><input type="number" name="kampfgeist2" required/><br/></span>
          <span class="row"><label>Technik</label><input type="number" name="technik2" required/><br/></span>
          <span class="row"><label>Stil</label><input type="number" name="stil2" required/><br/></span>
        </div>
      </div>
      <button type="submit">Ergebnis eintragen</button>
    </form>
  </div>

